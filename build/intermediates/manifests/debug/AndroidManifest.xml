<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.pocketconciergelive"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" >
        <activity
            android:name="com.project.pocketconciergelive.controller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.pocketconciergelive.LogIn"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.project.pocketconciergelive.login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.pocketconciergelive.Register"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.project.pocketconciergelive.register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.pocketconciergelive.Chat"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.project.pocketconciergelive.chat" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>